algoritmo "SomadorNumerico" // o usuario irá digitar varios valores,
//no final os valores inseridos serão todos somados e será
//exibido o maior valor digitado
var
   cont, V, S, maior: inteiro
inicio
   cont <- 1 //inicio do contador
   S <- 0    // inicio da soma
   enquanto (cont <= 5) faca
      escreva("Digite o", cont,  "o. valor: ")//solicitar os valores
      leia (V)
      se (V > maior) entao //verificando qual é o maior valor digitado
         maior <- V
      fimse
      S <- S + V //fazer soma de todos os valores
      cont <- cont + 1
   fimenquanto

   //resultado
   escreval("a soma de todos os valores foi", S)
   escreval("O maior valor digitado foi", maior)
fimalgoritmo
