algoritmo "Contagem_inteligente"// se o menor valor estiver no inicio
// faz uma contagem progressiva(crescente), se n√£o faz uma contagem
// regressiva (decrescente)
var
   i, f: inteiro
inicio
   i <- 0
   f <- 0

   escreval("CONTAGEM INTELIGENTE")
   escreval("--------------------")

   //solicitando valores
   escreva("Inicio: ")
   leia(i)
   escreva("Fim: ")
   leia(f)

   //contadores
   se (i < f) entao
      enquanto (i < f) faca
         escreval(i, "...")
         i <- i + 1
      fimenquanto
   senao
      se (i > f) entao
         enquanto (i > f) faca
            escreval(i, "...")
            i <- i - 1
         fimenquanto
      fimse
   fimse

fimalgoritmo
