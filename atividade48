algoritmo "atividade48" // Faça um programa que leia 7 números inteiros
// e no final mostre o somatório entre eles.
var
   contador, soma, v: inteiro
inicio
   contador <- 1
   soma <- 0

   enquanto (contador <= 7) faca
      escreva("Digite um valor: ")
      leia(v)
      soma <- soma + v
      contador <- contador + 1
   fimenquanto
   
   //exibindo resultado da soma
   escreval("O resultado dessa soma é: ", soma)
   
fimalgoritmo
