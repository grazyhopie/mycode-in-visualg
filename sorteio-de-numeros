algoritmo "sorteio-de-numeros" // Desenvolva um programa que faça o sorteio
// de 20 números entre 0 e 10 e mostre na tela:
// a) Quais foram os números sorteados
// b) Quantos números estão acima de 5
// c) Quantos números são divisíveis por 3
var
   contador, Num: inteiro
   NumSorteado, AcimaCinc, DivisivelTres: inteiro
inicio
   contador <- 1
   AcimaCinc <- 0
   DivisivelTres <- 0
   
   enquanto (contador <= 20) faca
         num <- randi (10)
         escreval("Numero sorteado: ", num)
         
      se (Num > 5) entao //verificando Quantos números estão acima de 5
         Num <-  AcimaCinc
         AcimaCinc <- AcimaCinc + 1
      fimse

      se (Num mod 3 = 0) entao //quantos números são divisíveis por 3
         Num <- DivisivelTres
         DivisivelTres <- DivisivelTres + 1
      fimse
      contador <- contador + 1
   fimenquanto
   
   escreval("Quantidade de numeros acima de cinco: ", AcimaCinc)
   escreval("Quantidade de numeros divisisveis por tres: ", DivisivelTres)

fimalgoritmo
